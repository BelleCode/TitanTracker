@model IEnumerable<TitanTracker.Models.Ticket>

<h1>MyTickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Archived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeveloperUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Archived)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.ToString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.ToString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatus.ToString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.PreferredName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeveloperUser.PreferredName)
                </td>
                <td>
                    <div class="btn-group-vertical">
                        <a class="btn btn-dark btn-group-xs" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-dark btn-group-xs" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-dark btn-group-xs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>