@model TitanTracker.Models.Invite

@{
    ViewData["Title"] = "Details";
}

<h1>Process Invite</h1>

<div>
    <h4>Invite</h4>
    <hr />

    <div class="container ">
        <div class="construction1 text-center details text-white">
            <div class="">
                <div id="wrapper">
                    <div class="vertical-align-wrap">
                        <div class="vertical-align-middle auth-main">
                            <div class="auth-box">
                                <div class="top">
                                    @*<img src="/assets/images/logo-white.svg" alt="Lucid">*@
                                </div>
                                <div class="card">
                                    <div class="header">
                                        <h3>
                                            <span class="clearfix title">
                                                <span class="number">Welcome</span><br />
                                                <span>@Model.InviteeFirstName @Model.InviteeLastName!</span> <br>
                                            </span>
                                        </h3>
                                        <h5><span>@Model.Company.Name Company</span></h5>
                                    </div>
                                    <div class="body">
                                        <p>
                                            @Model.Invitor.FullName has invited you to collaborate on the @Model.Project.Name project.
                                            <br /><br /> Click the "JOIN" button below to register with the company and begin entering tickets.
                                        </p>
                                        <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/RegisterByInvite" asp-route-id="@Model.Id" asp-route-companyId="@Model.CompanyId"><i class="fa fa-sign-in"></i> <span>JOIN</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
